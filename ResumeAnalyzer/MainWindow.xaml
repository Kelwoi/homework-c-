<Window x:Class="ResumeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume Analyzer" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Load File" Click="LoadFile_Click" Margin="0,0,10,0"/>
            <Button Content="Load Multiple Files" Click="LoadMultipleFiles_Click" Margin="0,0,10,0"/>
            <Button Content="Load from Folder" Click="LoadFromFolder_Click"/>
        </StackPanel>

        <TextBox x:Name="ReportTextBox" Grid.Row="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>
    </Window>

