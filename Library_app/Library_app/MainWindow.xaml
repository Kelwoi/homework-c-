<Window x:Class="Library_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <ComboBox x:Name="AuthorComboBox" SelectionChanged="AuthorComboBox_SelectionChanged"/>
        <TextBox x:Name="SearchTextBox" Margin="0,10,0,10" TextChanged="SearchTextBox_TextChanged"/>
        <ListBox x:Name="BooksListBox"/>
    </StackPanel>

</Window>
