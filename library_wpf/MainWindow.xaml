<Window x:Class="library_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Manager" Height="400" Width="600">
    <Grid>
        <ComboBox x:Name="comboBoxFilter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="150"/>
        <Button Content="Load" Click="LoadData_Click"/>

        <DataGrid x:Name="dataGrid" Margin="10,50,10,50"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Add" Width="75" Click="Button_Add_Click"/>
            <Button Content="Edit" Width="75" Margin="10,0,0,0" Click="Button_Edit_Click"/>
            <Button Content="Delete" Width="75" Margin="10,0,0,0" Click="Button_Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
