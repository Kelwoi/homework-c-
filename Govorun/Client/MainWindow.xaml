<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Говорун - Клієнт" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ChatBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
        <TextBox x:Name="InputBox" Grid.Row="1" Margin="0,10,0,0"/>
        <Button Grid.Row="2" Content="Надіслати" Margin="0,10,0,0" Click="SendButton_Click"/>
    </Grid>
</Window>
